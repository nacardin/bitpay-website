extends primary

block container
  div(class='#{contentClass}')
    block header
      include ../_includes/api-header
    
    .background-container
      .dark-background
    block content
      .api-nav
        block api-nav
          include ../_includes/api-nav
      .api-content
        mixin right-pane-header(image, version, githubUrl)
          .code-content
            .h2.background-contain.margin-bottom-less(style="background-image: url(/images/integrations/#{image}-full.png);width:4em;height:1em;")
            .row
              .column.small-8.large-6
                p.margin-bottom-none Recommended Version
              .column.small-4.large-6
                p.margin-bottom-none= version
            .row
              .column.small-8.large-6
                p Build
              .column.small-4.large-6
                p Passing
            .row
              .column
                a(href="#{githubUrl}" target="_blank").btn.btn-github.white View on GitHub
        block information
          
    block footer
    block mobile-language-picker
      include ../_includes/mobile-language-select
